datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  fullName String
  email    String   @unique
  password String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Name {
  id       Int      @id @default(autoincrement())
  fullName String
  email    String   @unique
  password String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Product {
  id         Int       @id @default(autoincrement())
  name       String
  imageUrl   String
  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])
  createAt   DateTime  @default(now())
  updateAt   DateTime  @updatedAt
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
  imageURL String
  createAt DateTime  @default(now())
  updateAt DateTime  @updatedAt
}
